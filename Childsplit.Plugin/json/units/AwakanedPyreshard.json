{
  "$schema": "https://github.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/releases/latest/download/schema.json",
  "cards": [
    {
      "id": "AwakanedPyreshard",
      "names": {
        "english": "Awakaned Pyreshard"
      },
      "card_art": "@BasicDraftUnitCardArt",
      "cost": 0,
      "card_type": "monster",
      "rarity": "common",
      "class": "@ClassBasic",
      "targets_room": true,
      "targetless": false,
      "pools": [ "MegaPool" ],
      "effects": [ "@SpawnAwaknedPyreShard" ],
      "lore_tooltips": [
        {
          "english": "This Shard of the Pyre has awakaned sentience, protecting the Pyre and my allies at the outpost. I could barely believe it when Fel returned from an expedition with this suddenly following her. She said that as they used ember to help the Pyre fight against a titan, it split from the Pyre and imprinted on the mannerism of others like a small impressionable child. If this is the sign of a pattern, perhaps my sins aren't unrepentable."
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "AwakanedPyreShardCharacter",
      "names": {
        "english": "Awakaned Pyreshard"
      },
      "character_art": "@BasicDraftUnitCharacterArt",
      "size": 1,
      "health": 0,
      "attack_damage": 1,
      "subtypes": [ "@TitanShard" ],
      "triggers": [ "@AwakanedPyreShardResonance" ],
      "starting_status_effects": [
        {
          "status": "titanskin",
          "count": 1
        }
      ]
    }
  ],
  "character_triggers": [
    {
      "id": "AwakanedPyreShardResonance",
      "descriptions": {
        "english": "Gain [effect1.power][ember]."
      },
      "trigger": {
                "id": "@Resonance",
                "mod_reference": "Conductor"
            },
      "effects": [ "@PyreShardEmber" ]
    }
  ],
  "effects": [
    {
      "id": "SpawnAwaknedPyreShard",
      "name": "CardEffectSpawnMonster",
