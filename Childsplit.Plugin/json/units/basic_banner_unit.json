{
  "$schema": "https://github.com/Monster-Train-2-Modding-Group/Trainworks-Reloaded/releases/latest/download/schema.json",
  "cards": [
    {
      "id": "BasicBannerUnit",
      "names": {
        "english": "Basic Banner Unit",
        "chinese": "示例具有触发的战旗单位"
      },
      "card_art": "@BasicBannerUnitCardArt",
      "cost": 2,
      "card_type": "monster",
      "rarity": "uncommon",
      "class": "@ClassBasic",
      "targets_room": true,
      "targetless": false,
      "pools": [ "UnitsAllBanner", "@UnitsBasicClanBanner" ],
      "effects": [ "@SpawnBasicBannerUnit" ],
      "lore_tooltips": [
        {
          "english": "This is an example banner unit with a trigger generated by the Mod Template.",
          "chinese": "示例剧情文本。"
        }
      ]
    }
  ],
  "characters": [
    {
      "id": "BasicBannerUnitCharacter",
      "names": {
        "english": "Basic Banner Unit",
        "chinese": "示例具有触发的战旗单位"
      },
      "character_art": "@BasicBannerUnitCharacterArt",
      "size": 2,
      "health": 30,
      "attack_damage": 30,
      "subtypes": [ "SubtypesData_BannerUnit", "@BasicSubtype" ],
      "triggers": [ "@BasicBannerUnitSlay" ]
    }
  ],
  "character_triggers": [
    {
      "id": "BasicBannerUnitSlay",
      "trigger": "on_kill",
      "descriptions": {
        "english": "Gain [rage] [effect0.status0.power].",
        "chinese": "获得[rage] [effect0.status0.power]。"
      },
      "effects": [ "@BasicBannerUnitGain5Rage" ]
    }
  ],
  "effects": [
    {
      "id": "SpawnBasicBannerUnit",
      "name": "CardEffectSpawnMonster",
      "target_mode": "room",
      "param_character": "@BasicBannerUnitCharacter"
    },
    {
      "id": "BasicBannerUnitGain5Rage",
      "name": "CardEffectAddStatusEffect",
      "target_mode": "self",
      "param_status_effects": [
        {
          "status": "buff",
          "count": 5
        }
      ]
    }
  ],
  "game_objects": [
    {
      "id": "BasicBannerUnitCardArt",
      "type": "card_art",
      "extensions": {
        "card_art": {
          "sprite": "@BasicBannerUnitCardSprite"
        }
      }
    },
    {
      "id": "BasicBannerUnitCharacterArt",
      "type": "character_art",
      "extensions": {
        "character_art": {
          "sprite": "@BasicBannerUnitCharacterSprite",
          "transform": {
            "position": {
              "x": 0,
              "y": 1.3,
              "z": 0
            },
            "scale": {
              "x": 1,
              "y": 1,
              "z": 1
            }
          }
        }
      }
    }
  ],
  "sprites": [
    {
      "id": "BasicBannerUnitCardSprite",
      "path": "textures/card_art/BasicBannerUnit.png"
    },
    {
      "id": "BasicBannerUnitCharacterSprite",
      "path": "textures/character_art/BasicBannerUnit.png"
    }
  ]
}
